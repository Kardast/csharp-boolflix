@model Serie

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli serie</h1>
            </div>
            @*img*@
            <div class="post-single-image-container">
                <img src="@Model.Image" alt="mmm film" width="900" height="400">
            </div>
            @*name*@
            <p>
                <strong>Nome:</strong>
                @Model.Title
            </p>
            @*year*@
            <p>
                <strong>Anno:</strong>
                @Model.Year 
            </p>
            @*description*@
            <p>
                <strong>Descrizione:</strong>
                @Model.Description
            </p>
            @*director*@
            <p>
                <strong>Regista:</strong>
                @Model.Director.Name
            </p>
            @*genres*@
            @if(Model.Genres.Count > 0)
            {
                <p>
                    <strong>Generi:</strong>
                    @foreach(Genre genre in Model.Genres)
                    {
                        <span class="badge bg-primary">@genre.Name</span>
                    }
                </p>
            }
            @*actors*@
            @if (Model.Actors.Count > 0)
            {
                <p>
                    <strong>Attori:</strong>
                    @foreach (Actor actor in Model.Actors)
                    {
                        <span class="badge bg-primary">@actor.Name</span>
                    }
                </p>
            }

            @*add season*@
            <a class="btn btn-info" asp-area="" asp-controller="Serie" asp-action="AddSeason" asp-route-id="@Model.Id">Aggiungi Stagione</a>

            @*show season*@
            @if (Model.Seasons.Count > 0)
            {
                <p>
                    @foreach (Season season in Model.Seasons)
                    {
                        <strong>Stagione: </strong>

                        <span>@season.Title</span> <br />

                        <a class="btn btn-success" asp-area="" asp-controller="Serie" asp-action="AddEpisode" asp-route-id="@season.Id">Aggiungi Episodio</a> <br />

                        <strong>Episodi:</strong> <br />
                        @if (season.Episodes.Count > 0)
                        {
                            @foreach (Episode episode in season.Episodes)
                            {
                                <span class="badge bg-primary">@episode.Title</span>
                            }

                        } <br /> <br/>
                    }
                </p>
            }
        </div>
    </div>
</div>